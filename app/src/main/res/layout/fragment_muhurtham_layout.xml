<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/muhurtham_titles"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="#F02414"
        android:fontFamily="@font/ramabhadra"
        android:layout_margin="@dimen/_20sdp"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/normal_muhurthams_recycler_view"
        android:scrollbars="none"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/agriculture_muhurtham"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="#F02414"
        android:fontFamily="@font/ramabhadra"
        android:layout_margin="@dimen/_20sdp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/agriculture_muhurthams_recycler"
        android:scrollbars="none"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:visibility="visible"/>

    </LinearLayout>

</LinearLayout>