<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <WebView
            android:id="@+id/contact_page_web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="WebViewLayout"/>


        <RelativeLayout
            android:id="@+id/our_team_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_350sdp"
            >


            <TextView
                android:id="@+id/txt_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#bb3536"
                android:textSize="18sp"
                android:text="@string/our_team"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_centerHorizontal="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_id"
                android:orientation="horizontal"
                android:weightSum="3">

                <RelativeLayout
                    android:id="@+id/contact_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/click_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="Click Here"
                        android:layout_centerHorizontal="true"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"/>

                    <ImageView
                        android:id="@+id/our_team_image_one"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_below="@+id/click_one"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/our_team_image_one"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="GVRS Ghanapaathi"
                        android:layout_centerHorizontal="true"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/contact_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/click_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="Click Here"
                        android:layout_centerHorizontal="true"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"/>
                    <ImageView
                        android:id="@+id/our_team_image_two"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_below="@id/click_two"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/our_team_image_two"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="GLG Avadhani"
                        android:layout_centerHorizontal="true"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/contact_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/click_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="Click Here"
                        android:layout_centerHorizontal="true"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"/>

                    <ImageView
                        android:id="@+id/our_team_image_three"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_below="@+id/click_three"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/our_team_image_three"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="GLGSBS Kumar"
                        android:layout_centerHorizontal="true"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"/>
                </RelativeLayout>



            </LinearLayout>



        </RelativeLayout>







    </LinearLayout>

</ScrollView>